@model IdeaNote.Web.UI.Models.Idea


@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

@if (Session["UserID"] == null)
{
    @Html.Partial("_Error")
}

else
{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LoggedIn.cshtml";

    <h2>Edit Idea</h2>

    using (Html.BeginForm("EditIdea", "Idea", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="col-md-8 mx-auto">
            <div class="card card-body">
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.title, new {@class = "col-md-2"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.title, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.title, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.details, new {@class = " col-md-2"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.details, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.details, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary"/>
                    </div>
                </div>
            </div>
        </div>
    }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}