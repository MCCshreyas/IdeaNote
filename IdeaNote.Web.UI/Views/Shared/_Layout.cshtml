<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IdeaNote</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-bottom: 0; padding-top: 0;">
<nav class="navbar navbar-expand-lg navbar-light bg-primary mb-5">
    <div class="container">
        <a class="navbar-brand text-white" href="/">IdeaNote</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon text-light"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link text-white" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/home/about">About</a>
                </li>
                <li class="nav-item">
                    <a href="/user/login" class="nav-link text-white .my-link-style">Login</a>
                </li>
                <li class="nav-item">
                    <a href="/user/register" class="nav-link text-white my-link-style">Register</a>
                </li>
            </ul>
        </div>
    </div>
</nav>


<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>Copyright &copy; @DateTime.Now.Year - Shreyas Jejurkar</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", false)
</body>
</html>